  "custom/nightmode": {
    "exec": "~/.config/waybar/scripts/night_mode.sh",
    "interval": 5,
    "format": "{}",
    "tooltip": "–ù–æ—á–Ω–æ–π —Ä–µ–∂–∏–º (–ª–∫–º ‚Äî –ø–µ—Ä–µ–∫–ª—é—á–∏—Ç—å)",
